= content main
  .flexcontainer
    .flag
    .top-nav
      .nav-inner
        = include views/_nav
    .toc-index
      .toc-inner
        .toc
          ul
            {{range .ArticlesByYear}}
              li
                a href="#year-{{.Year}}" {{.Year}}
            {{end}}
    .content
      .articles
        .content-inner-standard
          #title
            h1 Articles
          #articles
            {{range .ArticlesByYear}}
              div class="year" id="year-{{.Year}}"
              h2 {{.Year}}
              ul
                {{range .Articles}}
                  li
                    {{if .HookImage}}
                      a href="/{{.Slug}}"
                        img src="/assets/{{.Slug}}/hook.jpg" data-rjs="2"
                    {{end}}
                    .title
                      a href="/{{.Slug}}"
                        {{.Title}}
                      span.meta
                        |
                        {{FormatTime .PublishedAt}}
                    {{if ne .Hook ""}}
                      p.hook {{.Hook}}
                    {{end}}
                    .clear
                {{end}}
            {{end}}
